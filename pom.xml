<!--          <locales>en,fr</locales>-->
<!--        </configuration>-->
<!--      </plugin>-->
<!--    </plugins>-->
  </build>

  <reporting>
    <plugins>
      <plugin>
        <artifactId>maven-project-info-reports-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>
</project>
